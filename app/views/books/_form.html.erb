<%= form_for(@book, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @book.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h4>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :publisher, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :publisher, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :editor_info, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :editor_info, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :edition, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :edition, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :isbn, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :isbn, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :doi, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :doi, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :abstract, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_area :abstract, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :published_at, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.datetime_select :published_at, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
