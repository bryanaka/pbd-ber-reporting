<div class="page-header">
  <%= link_to books_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_book_path(@book), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show book</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @book.title %></dd>

  <dt>Publisher:</dt>
  <dd><%= @book.publisher %></dd>

  <dt>Editor info:</dt>
  <dd><%= @book.editor_info %></dd>

  <dt>Edition:</dt>
  <dd><%= @book.edition %></dd>

  <dt>Isbn:</dt>
  <dd><%= @book.isbn %></dd>

  <dt>Doi:</dt>
  <dd><%= @book.doi %></dd>

  <dt>Abstract:</dt>
  <dd><%= @book.abstract %></dd>

  <dt>Published at:</dt>
  <dd><%= @book.published_at %></dd>

</dl>
