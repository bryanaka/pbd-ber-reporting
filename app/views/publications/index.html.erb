<div class="page-header">
  <%= link_to new_publication_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Publication
  <% end %>
  <h1>Listing publications</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Title</th>
            <th>Journal name</th>
            <th>Journal url</th>
            <th>Pages</th>
            <th>Volume</th>
            <th>Issue</th>
            <th>Published at</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @publications) do |publication| %>
            <td><%= publication.title %></td>
            <td><%= publication.journal_name %></td>
            <td><%= publication.journal_url %></td>
            <td><%= publication.pages %></td>
            <td><%= publication.volume %></td>
            <td><%= publication.issue %></td>
            <td><%= publication.published_at %></td>
            <td><%= link_to 'Show', publication %></td>
        <td><%= link_to 'Edit', edit_publication_path(publication) %></td>
        <td><%= link_to 'Destroy', publication, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
