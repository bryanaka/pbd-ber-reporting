<%= form_for(@publication, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @publication.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@publication.errors.count, "error") %> prohibited this publication from being saved:</h4>

      <ul>
      <% @publication.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :journal_name, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :journal_name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :journal_url, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :journal_url, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pages, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :pages, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :volume, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.number_field :volume, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :issue, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.number_field :issue, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :published_at, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.datetime_select :published_at, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
